{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "tools": {
    "webfetch": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "consult7": {
      "type": "local",
      "command": ["uvx", "consult7", "openrouter", "${OPENROUTER_API_KEY}"],
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_PAT}"
      }
    },
    "zen": {
      "type": "local",
      "command": [
        "/home/roger/.config/opencode/zen-mcp-server/.zen_venv/bin/python",
        "/home/roger/.config/opencode/zen-mcp-server/server.py"
      ],
      "enabled": true
    }
  },
  "provider": {
    "lazer": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Lazer",
      "options": {
        "baseURL": "https://llm.lazertechnologies.com/v1"
      },
      "models": {
        "cerebras/qwen-3-coder-480b": { "name": "Qwen3 Coder" },
        "gemini/gemini-2.0-flash": { "name": "Gemini 2.0 Flash" },
        "gemini/gemini-2.5-flash": { "name": "Gemini 2.5 Flash" },
        "gemini/gemini-2.5-pro": { "name": "Gemini 2.5 Pro" },
        "groq/moonshotai/kimi-k2-instruct-0905": { "name": "Kimi K2 Instruct" },
        "xai/grok-code-fast": { "name": "Grok Code Fast" },
        "anthropic/claude-sonnet-4-5": { "name": "Claude Sonnet 4.5" },
        "anthropic/claude-3-5-haiku-latest": { "name": "Claude 3.5 Haiku" }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": { "baseURL": "http://${OLLAMA_API_BASE}:11434/v1" },
      "models": {
        "qwen3-coder:latest": { "name": "Qwen3 Coder (local)" },
        "gpt-oss:latest": { "name": "GPT-OSS (local)" },
        "qwen2.5-coder:latest": { "name": "Qwen 2.5 Coder (local)" }
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "app_help": "<leader>h",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "tool_details": "<leader>d",
    "switch_mode": "<leader>m"
  }
}
